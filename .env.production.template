# Production Environment Variables Template
# Copy this file to .env.production and fill in your production values

# Application Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Session Configuration (generate random strings for production)
SESSION_SECRET=your-secure-session-secret-here

# Optional: SendGrid for email notifications
SENDGRID_API_KEY=your-sendgrid-api-key

# Optional: Additional security configurations
CORS_ORIGIN=https://your-domain.com
TRUST_PROXY=1